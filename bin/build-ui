#!/usr/bin/env bash

# Changing directory to the repository root
REPOSITORY_ROOT=$(git rev-parse --show-toplevel)
cd "$REPOSITORY_ROOT" || exit

# Build the next app
cd web-app/
pnpm build

# Go back to the root
cd "$REPOSITORY_ROOT"

# Upload the files to the board
cd embedded/
platformio run --target buildfs --environment nodemcuv2